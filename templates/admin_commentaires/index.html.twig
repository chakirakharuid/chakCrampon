{% extends 'adminBase.html.twig' %}


{% block title %}Commentaires index{% endblock %}

{% block body %}
    <h1>Commentaires </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Pseudo</th>
                <th>Date_commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.Pseudo }}</td>
                <td>{{ commentaire.dateCommentaire ? commentaire.dateCommentaire|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-dark"href="{{ path('app_admin_commentaires_show', {'id': commentaire.id}) }}">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a style="margin-left:20px"class="btn btn-dark" href="{{ path('app_admin_commentaires_new') }}">Ajouter un commentaire</a>
{% endblock %}

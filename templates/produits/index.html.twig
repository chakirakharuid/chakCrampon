{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Description</th>
                <th>Couleur</th>
                <th>Prix</th>
                <th>Taille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td><img src="{{asset('assets/upload/' ~ produit.image ) }}" width="30%"></td>
               <td>{{ produit.description }}</td>
                <td>{{ produit.couleur }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.taille }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'id': produit.id}) }}"class="btn btn-light">Voir</a>
                    <a href="{{ path('app_panier', {'id': produit.id}) }}" class="btn btn-dark">Ajouter au pannier</a>

                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}

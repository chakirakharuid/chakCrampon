{% extends 'base.html.twig' %}

{% block title %} Panier{% endblock %}

{% block body %}
    <h1> Votre Panier</h1>
{% if lepanier is defined %}
	{% if lepanier > 0 %}
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Prix</th>
				<th>quantite</th>
				<th>total</th>
				<th>Supprimer</th>
			</tr>
		</thead>

		<tbody>
			{% for row in lepanier %}
				<tr>
					<td>{{ row.product.id }}</td>
					<td>{{ row.product.nom }}</td>
					<td>{{ row.product.prix }}</td>
					<td>{{ row.quantite }}</td>
					<td>{{ row.quantite * row.product.prix }}</td>
					<td>
					<a href="{{ path('app_supprimer', {'id': row.product.id}) }}"class="btn btn-danger">Supprimer du panier</a>
					</td>
				</tr>
			{% endfor %}
    </tbody>
	</table>
	<a style="margin-left:20px" href="{{ path('app_vider') }}" class="btn btn-danger">Vider le panier</a>
	<br/>
	<h4>Total :{{ total }}â‚¬</h4>
			{% else %}
			<h2>Votre panier est vide!</h2>
			{% endif %}
        {% endif %}
<br/><br/>
<a style="margin-left:20px" href="{{ path('app_payement') }}" class="btn btn-success">Payer</a>

{% endblock %}
